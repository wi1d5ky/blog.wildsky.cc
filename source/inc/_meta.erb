<%
  title = ""
  if current_page.data.title != nil
    title += current_page.data.title + " | " unless current_page.data.title == "homepage"
  end
  title += data.site.name
  description = current_page.path.include?('posts') ? strip_tags(current_page.summary(100)) : data.site.slogan
  pic = "http://blog.wildsky.cc/images/wildsky_main_pic.jpg"
%>

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8" />

<meta name="title" content="<%= title %>" />
<meta name="description" content="<%= description %>" />

<meta property="og:type" content=<%= title == "homepage" ? "website" : "article" %> />
<meta property="og:site_name" content="<%= current_page.data.title %>" />
<meta property="og:locale" content="zh_TW" />
<meta property="og:url" content="http://blog.wildsky.cc<%= current_page.url %>" />
<meta property="og:image" content="<%= pic %>" />
<meta property="og:title" content="<%= title %>" />
<meta property="og:description" content="<%= description %>" />
<meta property="fb:app_id" content="1521058658143315" />
<meta property='article:author' content='https://www.facebook.com/wi1d5ky'/>

<meta name="twitter:card" content="summary" />
<meta name="twitter:site" content="@wildskyf" />
<meta name="twitter:title" content="<%= title %>" />
<meta name="twitter:description" content="<%= description %>" />
<meta name="twitter:image" content="<%= pic %>" />

